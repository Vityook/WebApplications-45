<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Running Shoes Shop</title>
    <link rel="stylesheet" href="shopstyle.css">
</head>
<body>
    <header>
        <h1>Find your Perfect pair</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
            </ul>
        </nav>
    </header>
    
    <main>
        <section id="products">
            <h2>Our Products</h2>
            <% 
                const products = [
                    { name: "Running Shoe 1", price: 99.99, img: "images/img1.png" },
                    { name: "Running Shoe 2", price: 119.99, img: "images/img8.png" },
                    { name: "Running Shoe 3", price: 109.99, img: "images/pic2.png" },
                    { name: "Running Shoe 4", price: 129.99, img: "images/pic3.png" },
                    { name: "Running Shoe 5", price: 89.99, img: "images/pic4.png" },
                    { name: "Running Shoe 6", price: 139.99, img: "images/pic5.jpeg" },
                    { name: "Running Shoe 7", price: 109.99, img: "images/pic6.png" },
                    { name: "Running Shoe 8", price: 119.99, img: "images/pic7.png" },
                    { name: "Running Shoe 9", price: 99.99, img: "images/nike-free.png" },
                    { name: "Running Shoe 10", price: 129.99, img: "images/puma.png" }
                ]; 
            %>
        
            <% products.forEach(product => { %>
                <div class="product-card">
                    <div class="product-card-inner">
                        <div class="product-card-front">
                            <img src="<%= product.img %>" alt="<%= product.name %>">
                        </div>
                        <div class="product-card-back">
                            <div class="product-info">
                                <h3><%= product.name %></h3>
                                <p>Price: $<%= product.price.toFixed(2) %></p>
                                <button>Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </section>
    <!-- Add more product cards here as needed -->
</div>
        <!--end of soes part-->
        
        <section id="contact">
            <h2>Contact Us</h2>
            <p>Email: info@shoeshop.com</p>
            <p>Phone: +123 456 7890</p>
        </section>
    </main>
    
    <footer>
        <p>&copy; 2024 Shoes Shop. All rights reserved.</p>
    </footer>
</body>
</html>
