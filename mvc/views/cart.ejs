<h1>Your Shopping Cart</h1>

<% if (products && Object.keys(products).length > 0) { %>
    <ul>
        <% for (let imageSrc in products) { %>
            <li>
                <strong><%= products[imageSrc].item.name %></strong> - 
                <%= products[imageSrc].qty %> x $<%= products[imageSrc].item.price %> 
                = $<%= products[imageSrc].price %>

                <!-- Reduce quantity or remove item -->
                <a href="/cart/reduce/<%= imageSrc %>">Reduce by 1</a> |
                <a href="/cart/remove/<%= imageSrc %>">Remove</a>
            </li>
        <% } %>
    </ul>

    <h2>Total Price: $<%= totalPrice %></h2>
    <a href="/">Continue Shopping</a>
<% } else { %>
    <p>Your cart is empty</p>
    <a href="/">Continue Shopping</a>
<% } %>
